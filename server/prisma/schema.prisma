generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Habit {
  id         String   @id @default(uuid()) // id automatically generated - @default(uuid())
  title      String
  created_at DateTime

  dayHabits DayHabit[] // foreign keys list
  weekDays  HabitsWeekDays[]

  @@map("habits") // renaming table name
}

model HabitsWeekDays {
  id       String @id @default(uuid())
  habit_id String
  week_day Int

  habit Habit @relation(fields: [habit_id], references: [id]) // foreign key

  @@unique([habit_id, week_day])
  @@map("habit_week_days")
}

model Day {
  id       String     @id @default(uuid())
  date     DateTime
  dayHabit DayHabit[] // foreign keys list

  @@unique([date])
  @@map("days")
}

model DayHabit {
  id       String @id @default(uuid())
  day_id   String
  habit_id String

  day   Day   @relation(fields: [day_id], references: [id]) // foreign key
  habit Habit @relation(fields: [habit_id], references: [id])

  @@unique([day_id, habit_id])
  @@map("day_habits")
}


generator erd { 
  provider = "prisma-erd-generator" // generate a ERD Entity Relationship Diagram
}